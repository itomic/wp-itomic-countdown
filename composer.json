{
    "name": "itomic/itomic-countdown",
    "description": "Display a real-time countdown to any event on your WordPress site",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Itomic",
            "email": "info@itomic.com.au",
            "homepage": "https://www.itomic.com.au"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=WordPress itomic-countdown.php assets/",
        "phpcbf": "phpcbf --standard=WordPress itomic-countdown.php assets/",
        "build": "./deploy.sh",
        "deploy": "./deploy.sh && echo 'Deploy to servers manually'"
    },
    "autoload": {
        "psr-4": {
            "Itomic\\Countdown\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itomic\\Countdown\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "wordpress-install-dir": "wp"
    }
} 